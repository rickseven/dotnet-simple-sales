@{
    ViewData["Title"] = "User";
}
<h1>@ViewData["Title"]</h1>
<br/>
<a href="User/Create"><button class="btn btn-primary">Create New User</button></a>
<br/><br />
<table id="datatable" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>No</th>
        <th>Email</th>
        <th>Action</th>
    </tr>
    </thead>
</table>

@section Scripts
{
    <script>
        var table;
        $(document).ready(function() {
            table = $("#datatable").DataTable({
                "ajax": "User/Get",
                "scrollX": true,
                "columns": [
                    { data: null },
                    { data: "email" },
                    {
                        render: function(data, type, row, meta) {
                            return "<button class='btn btn-warning' onclick='update(\"" +
                                row.id +
                                "\")'>Update</button> &nbsp; <button class='btn btn-danger' onclick='remove(\"" +
                                row.id +
                                "\")'>Delete</button>";
                        }
                    }
                ]
            });

            table.on('order.dt search.dt',
                function() {
                    table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function(cell, i) {
                        cell.innerHTML = i + 1;
                    });
                }).draw();
        });

        function update(id) {
            window.location.href = "/User/Update/"+id;
        }

        function remove(id) {
            if (confirm('Are you sure you want to delete this data?')) {
                $.ajax({
                    type: "DELETE",
                    url: "/User/Delete/"+id,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function(res) {
                        if (res.status === true) {
                            table.ajax.reload();
                        }
                        alert(res.message);
                    },
                    failure: function(res) {
                        alert(res.message);
                    },
                    error: function(res) {
                        alert(res.message);
                    }
                });
            }
        }
    </script>
}
